<div class='col s6 m6 l2'>
  {{#link-to 'repositories.repository' dep.name}}
  <div class={{cardTags}}>
    <span class="card-title-small black-text">{{dep.name}}</span>
    <div class="card-content teal-text darken-2">
      <div class="truncate">
        Version: {{dep.version}} <br />
        {{#if dep.compliant.[1]}}
          {{#if dep.compliant.[0]}}
            <span class="green-text">Min Required: {{dep.compliant.[1]}}</span>
          {{else}}
            <span class="red-text">Min Required: {{dep.compliant.[1]}}</span>
          {{/if}}
        {{/if}}
      </div>
      <div class="card-action"></div>
    </div>
  </div>
  {{/link-to}}
</div>
