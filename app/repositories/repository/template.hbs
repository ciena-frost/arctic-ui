<div class="title">
  <h5>ID: {{model.id}}</h5>
  <h5>Repository: {{model.name}}</h5>
  <h5>Author: {{model.user}}</h5>
  <h5>Version: {{model.version}}</h5>
  {{log model}}
  <h5>Description: {{model.description}}</h5>
    <div class='row'>
      <div class='content overflow col l4 m6 s8'>
      <h5>Dependencies<br /></h5>
        {{#each model.dependencies as |dep|}}
          <div class='col s12 m6 l4'>
            <div class='card blue-grey darken-1'>
              <div class="card-content white-text">
                <span class="card-title">{{dep.name}}</span>
                <p>{{dep.version}}</p>
              </div>
              <div class="card-action">
                <a href='/repositories/{{dep.id}}'>More Details</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
      <div class='content overflow col l4 m6 s8'>
      <h5>Developer Dependencies</h5>
        {{#each model.devdependencies as |dep|}}
          <div class='col s12 m6 l4'>
            <div class='card blue-grey darken-1'>
              <div class="card-content white-text">
                <span class="card-title">{{dep.name}}</span>
                <p>{{dep.version}}</p>
              </div>
              <div class="card-action">
                <a href='/repositories/{{dep.id}}'>More Details</a>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
</div>
